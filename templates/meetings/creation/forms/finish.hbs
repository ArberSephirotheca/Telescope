{{! Meeting creation form }}
<div class="row justify-content-center no-gutters">
    <div class="card text-dark col-sm-11 col-md-9 col-lg-7">
        <div class="card-header">
            <h1 class="card-title">
                Create Meeting
            </h1>
        </div>

        <div class="card-body">
            <form method="post">
                {{! Host info }}
                <div class="form-group">
                    {{#with context.host.[0]}}
                        Hosted by: <a href="{{profile_for username}}" target="_blank" rel="noopener noreferrer">{{first_name}} {{last_name}}</a>
                    {{else}}
                        No host.
                    {{/with}}
                </div>

                {{! Semester Dropdown }}
                <div class="form-group">
                    <label for="semester-select">Semester:</label>
                    <select class="form-control" id="semester-select" name="semester" required>
                        {{#each context.available_semesters}}
                            <option value="{{semester_id}}">
                                {{title}} ({{format_date start_date}} - {{format_date end_date}})
                            </option>
                        {{else}}
                            <option disabled>
                                No Semesters Available
                            </option>
                        {{/each}}
                    </select>
                </div>

                {{! Meeting types dropdown }}
                <div class="form-group">
                    <label for="meeting-type-select">Type:</label>
                    <select class="form-control" id="meeting-type-select" name="kind" required>
                        {{#each meeting_types}}
                            <option value="{{this}}">
                                {{format_meeting_type this}}
                            </option>
                        {{/each}}
                    </select>
                </div>

                {{! Title field }}
                <div class="form-group">
                    <label for="title-input">Title (optional):</label>
                    <input name="title" class="form-control" type="text" id="title-input" aria-describedby="title-description">
                    <small id="title-description" class="form-text text-muted">
                        If left out, a title will be auto-generated from the meeting type and date. It is
                        strongly recommended to include a title for workshops, since there are sometimes several
                        daily and they focus on different topics.
                    </small>
                </div>

                {{! Start date and time }}
                <div class="form-row">
                    {{! Start }}
                    <div class="form-group col-md-3">
                        <label for="start-date-input">Start date:</label>
                        <input name="start_date" type="date" id="start-date-input" class="form-control" required>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="start-time-input">Start time:</label>
                        <input type="time" name="start_time" id="start-time-input" class="form-control" required>
                    </div>

                    {{! End }}
                    <div class="form-group col-md-3">
                        <label for="end-date-input">End date:</label>
                        <input type="date" id="end-date-input" name="end_date" class="form-control" required>
                    </div>

                    <div class="form-group col-md-3">
                        <label for="end-time-input">End time:</label>
                        <input type="time" id="end-time-input" name="end_time" class="form-control" required>
                    </div>
                </div>

                {{! Note to the user about timezones }}
                <small class="text-muted form-text text-center mb-2">
                    Enter all dates and times in New York time.
                </small>
                
                {{! Submit button }}
                <button type="submit" class="btn btn-primary w-100">
                    Create
                </button>
            </form>
        </div>
    </div>
</div>
