<div class="form-group form-row">
    <label for="{{id}}" class="col-md-2 col-form-label">
        {{label}}
    </label>
    <div class="col-md-10">
        <input
            id="{{id}}"
            type="{{type}}"
            name="{{name}}"

            {{#if value}}
                value="{{value}}"
            {{/if}}

            {{#if placeholder}}
                placeholder="{{placeholder}}"
            {{/if}}

            {{#if error}}
                class="form-control is-invalid"
                aria-labelledby="{{id}}-invalid"
            {{else}}
                {{#if success}}
                    class="form-control is-valid"
                    aria-labelledby="{{id}}-valid"
                {{else}}
                    class="form-control"
                {{/if}}
            {{/if}}

            {{#if required}} required {{/if}}
        >
        {{> forms/common/feedback_tooltips this}}
    </div>
</div>
