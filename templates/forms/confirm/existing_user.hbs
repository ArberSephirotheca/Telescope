{{#if invite}}
    <div class="card bg-success text-light">
        <h1 class="card-header">
            <em>{{invite.email}}</em> confirmed!
        </h1>
    </div>
{{else}}
    {{#if existing_error}}
        <div class="card bg-danger text-light">
            <h1 class="card-header">
                <em>{{invite.email}}</em> could not be confirmed!
                Invite id: <code>{{invite.invite_id}}</code>
                {{#if error_message}}
                    {{error_message}}
                {{/if}}
            </h1>
        </div>
    {{else}}
    {{/if}}
{{/if}}