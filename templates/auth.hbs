<div class="row justify-content-center no-gutters">
    <div class="card col-sm-10 col-md-8 col-lg-6 col-xl-4 text-dark">
        <div class="card-header">
            <h1> {{header}} </h1>
        </div>
        <div class="card-body">
            {{#each items}}
                <a href="{{link}}" class="btn w-100 {{class}}" role="button">
                    {{message}}
                    {{#if icon}}
                        {{#if (eq icon "discord")}}
                            {{! There is no feather icon for discord currently but I want a discord icon here so we do it manually. }}
                            <img src="https://discord.com/assets/2f71ab5383293f63985ac8d5c632b3d4.png" alt="Discord Logo" height="22">
                        {{else}}
                            <i data-feather="{{icon}}"></i>
                        {{/if}}
                    {{/if}}
                </a>
            {{/each}}
        </div>
    </div>
</div>
